<h1>Listing Ingredients</h1>

<table class='table table-hover table-striped table-sm'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Calories</th>
      <th colspan='3'></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td><%= ingredient.calories%></td>
        <td><%= link_to 'Show', ingredient_path(ingredient), class: 'btn btn-success btn-sm' %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient), class: 'btn btn-secondary btn-sm' %></td>
        <td><%= link_to 'Destroy', ingredient_path(ingredient), class: 'btn btn-danger btn-sm',
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Ingredient', new_ingredient_path, class: 'btn btn-info' %>