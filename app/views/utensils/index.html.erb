<h1>Utensils</h1>

<table class='table table-hover table-striped table-sm'>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan='3'></th>
    </tr>
  </thead>

  <tbody>
    <% @utensils.each do |utensil| %>
      <tr>
        <td><%= utensil.name %></td>
        <td><%= link_to 'Show', utensil_path(utensil), class: 'btn btn-success btn-sm' %></td>
        <td><%= link_to 'Edit', edit_utensil_path(utensil), class: 'btn btn-secondary btn-sm' %></td>
        <td><%= link_to 'Destroy', utensil_path(utensil), class: 'btn btn-danger btn-sm',
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Utensil', new_utensil_path, class: 'btn btn-info' %>