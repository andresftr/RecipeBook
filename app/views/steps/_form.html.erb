<%= form_with model: @step, local: true do |form| %>
  <% if @step.errors.any? %>
    <div id='error_explanation'>
      <h2>
        <%= pluralize(@step.errors.count, 'error') %>
      prohibited
        this step from being saved:
      </h2>
      <ul>
        <% @step.errors.full_messages.each do |msg| %>
          <li><%= msg %></li> 
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :operation %>
    <%= form.text_area :operation, required: true %>
  </div>

  <div>
    <%= form.label :expected_minutes %>
    <%= form.number_field :expected_minutes, step: :any, required: true %>
  </div>

  <div>
    <%= form.label :comment %>
    <%= form.text_area :comment, required: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>