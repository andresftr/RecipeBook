<h1>Listing Steps</h1>

<table>
  <tr>
    <th>Operation</th>
    <th>Expected Minutes</th>
    <th>Comment</th>
    <th colspan='3'></th>
  </tr>

  <% @steps.each do |step| %>
    <tr>
      <td><%= step.operation %></td>
      <td><%= step.expected_minutes %></td>
      <td><%= step.comment %></td>
      <td><%= link_to 'Show', step_path(step) %></td>
      <td><%= link_to 'Edit', edit_step_path(step) %></td>
      <td><%= link_to 'Destroy', step_path(step),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

