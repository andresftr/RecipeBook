<h1>Recipes</h1>

<table class= 'table table-hover table-striped table-sm'>
  <thead>
    <tr>
      <th>Name of the Dish</th>
      <th>Source</th>
      <th>Location</th>
      <th>Total Minutes</th>
      <th colspan='3'></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.plate.name %></td>
        <td><%= recipe.source %></td>
        <td><%= recipe.location %></td>
        <td><%= recipe.total_minutes %></td>
        <td><%= link_to 'Show', recipe_path(recipe), class: 'btn btn-success btn-sm' %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe), class: 'btn btn-secondary btn-sm' %></td>
        <td><%= link_to 'Destroy', recipe_path(recipe), class: 'btn btn-danger btn-sm',
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New recipe', new_recipe_path, class: 'btn btn-info' %>